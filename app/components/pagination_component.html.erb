<div class="flex flex-col items-center">
  <!-- Help text -->
  <span class="text-sm text-gray-700 dark:text-gray-400">
    <%= showing_text.html_safe %>
  </span>
  <!-- Buttons -->
  <div class="inline-flex mt-2 xs:mt-0">
    <% if prev_url %>
      <%= link_to 'Prev', prev_url, class: 'flex items-center justify-center px-3 h-8 text-sm font-medium text-white bg-gray-800 rounded-s hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white', rel: 'prev', 'aria-label': 'Previous' %>
    <% end %>
    <% if next_url %>
      <%= link_to 'Next', next_url, class: 'flex items-center justify-center px-3 h-8 text-sm font-medium text-white bg-gray-800 border-0 border-s border-gray-700 rounded-e hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white', rel: 'next', 'aria-label': 'Next' %>
    <% end %>
  </div>
</div>