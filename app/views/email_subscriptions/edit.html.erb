<div class="flex flex-col items-center px-6 pt-8 mx-auto md:h-screen lg:mt-0 dark:bg-gray-900">
  <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Notifications</h2>
    <%= form_with url: email_subscription_path, method: :patch do %>
      <% @subscription_lists.each do |list| %>
        <div class="mb-4 flex items-center">
          <%= check_box_tag "subscriptions[]", list, @user_subscriptions.include?(list), class: 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white mr-2' %>
          <%= label_tag "subscriptions_#{list}", list.humanize, class: 'text-sm font-medium text-gray-900 dark:text-gray-300' %>
        </div>
      <% end %>
      <div class="actions mb-4">
        <%= submit_tag "Update Subscriptions", class: 'w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800' %>
      </div>
    <% end %>
  </div>
</div>
