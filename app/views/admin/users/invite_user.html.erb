<% content_for :title, "Invite User" %>
<%
resource = User.new
resource_name = resource.class.to_s.underscore
%>
<div id="page-content">
  <div id="active_admin_content">
    <div class="main_content">
     <%= form_for(resource, as: resource_name, url: send_invite_admin_users_path, html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <% resource.class.invite_key_fields.each do |field| -%>
          <div class="field">
            <%= f.label field %><br />
            <%= f.text_field field %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit t("devise.invitations.new.submit_button") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
