<%= content_for :profile_container do %>
<div class="profile-container">
  <div class="flex items-center space-x-3">
    <%= render PrimaryActionButtonComponent.new(user: current_or_guest_user) %>
  </div>
</div>
<% end %>

<div class="relative bg-white">
  <!-- Header Photo -->
  <img class="h-48 w-full object-cover shadow-lg" src="https://pbs.twimg.com/profile_banners/1192091185/1701762563/1500x500" alt="Twitter Header Photo">

  <!-- Profile Container -->
  <div class="flex items-end justify-between px-4 py-4 lg:py-8">
    <!-- Profile Photo and Info -->
    <div class="flex items-center space-x-4">
      <!-- Profile Photo -->
      <img class="h-24 w-24 rounded-full border-4 border-white shadow-lg" src="http://placekitten.com/g/200/300" alt="Twitter Profile Photo">
      <!-- Profile Info -->
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Dean Lofts</h1>
        <p class="text-sm text-gray-500">@loftwah</p>
      </div>
    </div>

    <!-- Quote Container -->
    <div class="bg-white bg-opacity-80 py-2 px-4 rounded-lg">
      <p class="text-xl font-semibold italic text-gray-900">"Any sufficiently advanced technology is equivalent to magic." - Arthur C. Clarke</p>
    </div>
  </div>
</div>


<div class="flex flex-wrap">
  <!-- Posts -->
  <a href="#" class="block w-full md:w-1/2 lg:w-1/4 p-2">
    <div class="p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Posts</h5>
      <p class="font-normal text-gray-700 dark:text-gray-400">20</p>
      <p class="font-normal text-green-600 dark:text-green-400">+5 since last week</p>
    </div>
  </a>
  <!-- Impressions -->
  <a href="#" class="block w-full md:w-1/2 lg:w-1/4 p-2">
    <div class="p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Impressions</h5>
      <p class="font-normal text-gray-700 dark:text-gray-400">1.62M</p>
      <p class="font-normal text-green-600 dark:text-green-400">30.3% increase</p>
    </div>
  </a>
  <!-- Profile Clicks -->
  <a href="#" class="block w-full md:w-1/2 lg:w-1/4 p-2">
    <div class="p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Profile Clicks</h5>
      <p class="font-normal text-gray-700 dark:text-gray-400">7.23K</p>
      <p class="font-normal text-green-600 dark:text-green-400">142% increase</p>
    </div>
  </a>
  <!-- Followers -->
  <a href="#" class="block w-full md:w-1/2 lg:w-1/4 p-2">
    <div class="p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Followers</h5>
      <p class="font-normal text-gray-700 dark:text-gray-400">20.46K</p>
      <p class="font-normal text-blue-600 dark:text-blue-400">2.3% decrease</p>
    </div>
  </a>
</div>


<%= render "public_page/followers_graph" %>
<%= render "public_page/engagement_rate" %>
<%= render "public_page/impressions_over_time" %>
<%= render "public_page/profile_conversion_rate" %>


<section class="py-8 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Posts</h2>
    <div class="space-y-4">
      <!-- Begin Tweet -->
      <div class="p-4 border rounded-lg bg-white">
        <div class="flex items-center space-x-4">
          <img class="w-10 h-10 rounded-full" src="https://placekitten.com/g/200/300" alt="Profile image">
          <div class="flex-1">
            <div class="font-bold text-gray-900">Echosight</div>
            <div class="text-sm text-gray-500">@echosight</div>
          </div>
          <div class="text-sm text-gray-500">2h ago</div>
        </div>
        <p class="mt-3 text-gray-700">
          Just posted a new article on our site! Check it out for the latest updates. #newpost #updates
        </p>
      </div>
      <!-- End Tweet -->
      <!-- Repeat for each tweet -->
    </div>
  </div>
</section>


<section class="bg-gray-100 text-gray-800 py-8 px-4 sm:px-6 lg:px-8 rounded-xl w-full">
  <div class="w-full mx-auto text-center">
    <h2 class="text-3xl font-extrabold sm:text-4xl">
      Want to Stand Out?
    </h2>
    <p class="mt-4 text-lg leading-6">
      Get your own public page with private dashboard and join the community of Echosight trendsetters.
    </p>
    <div class="mt-8 flex justify-center">
      <div class="inline-flex rounded-md shadow">
        <a href="<%=new_registration_path(:user) %>" class="call-to-action-button call-to-action-button-indigo">
          Join Echosight Now
        </a>
      </div>
    </div>
  </div>
</section>


