<div class="flex flex-col items-center justify-center px-6 pt-8 mx-auto md:h-screen lg:mt-0 dark:bg-gray-900">
    <!-- Card -->
    <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
        Change your password
    </h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
            <div>
                <%= f.label :password, "New password" %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                <em class="text-sm text-gray-500 dark:text-white">(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
          </div>

            <div>
                <%= f.label :password_confirmation, "Confirm new password" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions">
                <button type="submit" class="w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    Change my password
                </button>
            </div>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
