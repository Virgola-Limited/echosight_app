<!-- app/views/users/sessions/new_otp.html.erb -->
<div class="flex flex-col items-center justify-center px-6 pt-8 mx-auto md:h-screen pt:mt-0 dark:bg-gray-900">
  <!-- Card -->
  <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
      Enter OTP Code
    </h2>
    <%= form_for(:user, url: verify_otp_user_session_path) do |f| %>
      <div>
        <%= f.label :otp_attempt, 'Two-Factor Authentication Code', class: 'block text-sm font-medium text-gray-900 dark:text-gray-300' %>
        <%= f.text_field :otp_attempt, autocomplete: "one-time-code", class: 'mt-1 block w-full rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark:bg-gray-700 dark:text-gray-300' %>
      </div>

      <div class="actions">
        <button type="submit" class="w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Verify and Log in</button>
      </div>
    <% end %>
  </div>
</div>
