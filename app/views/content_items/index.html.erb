<%= render Shared::HeadingComponent.new(text: "Echosight News", heading_type: :h1) %>

<div class="space-y-4">
  <% @content_items.each do |item| %>
    <%= render ContentBoxComponent.new do %>
      <%= render Shared::HeadingComponent.new(text: item.title || "Update on #{item.created_at.strftime("%B %d, %Y")}", heading_type: :h2) %>
      <p class="paragraph-base"><%= item.content %></p>

      <% if item.image_url %>
        <img src="<%= url_for(item.image_url) %>" alt="Related image" class="mt-3 max-w-full h-auto rounded-lg">
      <% end %>

      <%= 'Add share button here https://ellisonleao.github.io/sharer.js/#twitter' if Rails.env.development?  %>
    <% end %>
  <% end %>
</div>
