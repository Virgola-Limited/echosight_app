<h2 class="mt-4 text-2xl font-bold text-gray-900 dark:text-white">Engagement Rate</h2>
<div class="w-full bg-white rounded-lg shadow dark:bg-gray-800 p-4 md:p-6">
  <div id="engagement-chart"></div>
</div>

<script>
  window.addEventListener("load", function() {
    let options = {
      chart: {
        height: '600px',
        type: "bar",
        fontFamily: "Inter, sans-serif",
        toolbar: {
          show: false,
        },
      },
      series: [{
        name: "Engagement Rate",
        data: [<%= @total_likes %>, <%= @total_retweets %>,<%= @total_replies %>]
      }],
      xaxis: {
        categories: ['Likes', 'Retweets', 'Replies'],
      },
      yaxis: {
        min: 0,
        max: 80,
        tickAmount: 8,
        labels: {
          formatter: function (val) {
            return val.toFixed(0);
          }
        }
      },
      plotOptions: {
        bar: {
          distributed: true, // This makes the colors apply to individual bars
          borderRadius: 5,
          columnWidth: '55%',
        },
      },
      dataLabels: {
        enabled: false,
      },
      fill: {
        colors: ['#1A56DB', '#7E3AF2', '#FEB019'], // Colors for each bar
      },
      stroke: {
        show: true,
        width: 2,
        colors: ['#ffffff'],
      },
      tooltip: {
        enabled: true,
      },
      grid: {
        show: true,
        strokeDashArray: 4,
      },
    };

    if (document.getElementById("engagement-chart") && typeof ApexCharts !== 'undefined') {
      const chart = new ApexCharts(document.getElementById("engagement-chart"), options);
      chart.render();
    }
  });
</script>
